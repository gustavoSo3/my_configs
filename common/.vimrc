set nocompatible
filetype on
filetype plugin on
filetype indent on

syntax on

set relativenumber
set cursorline
"set cursorcolumn

set shiftwidth=4
set tabstop=4

set showmode
set showmatch
set hlsearch

set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pcy,*.exe,*.flv,*.img,*.xlsx
